{
    "name": "axleus/axleus-dev-tools",
    "description": "Developer tooling for the Axleus platform",
    "license": "BSD-3-Clause",
    "keywords": [
        "axleus",
        "axleus dev tools"
    ],
    "authors": [
        {
            "name": "Joey Smith",
            "email": "jsmith@webinertia.net",
            "homepage": "https://github.com/axleus"
        }
    ],
    "suggest": {
    },
    "require": {
        "php": "~8.2.0",
        "axleus/axleus-db": "^1.0.x-dev",
        "laminas/laminas-component-installer": "^3.2",
        "tracy/tracy": "^2.10",
        "webinertia/bjy-profiler": "^0.0.11"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-phpunit": "^0.18.4",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^5.14"
    },
    "extra": {
        "laminas": {
            "module": "Axleus\\DevTools",
            "config-provider": "Axleus\\DevTools\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Axleus\\DevTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AxleusTest\\DevToolsTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always --testsuite \"unit test\"",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-integration": "phpunit --colors=always --testsuite \"integration test\""
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
